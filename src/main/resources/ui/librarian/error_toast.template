<div role="alert" aria-live="assertive" aria-atomic="true" class="toast" data-autohide="false" id="toast-<%= id %>">
    <div class="toast-header">
        <strong class="mr-auto" style="color: #dd3333;"><%= title %></strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        <%= body %>
    </div>
</div>